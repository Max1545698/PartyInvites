@model Product[]
@{
    ViewBag.Title = "Product Name";
}
<div>
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Price</td>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.Length; i++)
            {
               <tr>
                   <td>@Model[i].Name</td>
                   <td>@($"{Model[i].Price:C2}")</td>
               </tr>
            }
        </tbody>
    </table>
</div> 